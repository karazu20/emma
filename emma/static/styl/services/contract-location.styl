.contract-location
  background-color #f3f3f4
  overflow-x hidden
  overflow-y auto

  &-btn
    font-size 21px
    display inline-block
    padding 6px 21px
    margin 3em auto 6.5em auto

  &-btn-2
    font-size 21px
    display inline-block
    padding 6px 21px
    margin 3em auto 6.5em auto

  &-row-days-error
    margin-top 0.7em
    display none
    .col-lg-3
      label
        padding-left 0

  &-row-day-btn
    margin-top 1.5em
    text-align left
    padding-right 0

  &-day-btn
    vertical-align middle
    font-size 15px
    padding 0.5em

  &-workshops
    font-size 19px
    padding 0.7em
    width 100%
    margin 0.4em auto
    overflow-x scroll
    white-space no-wrap
    color white
    background-color $orange
    border-radius 5px

  &-form
    margin-top 1em
    &-area
      width 100%
      font-size 18px
      padding 1em
      resize none
      margin 0.4em 0
      color $dark_gray
    &-input
      font-size 19px
      padding 0.7em
      width 100%
      margin 0.4em auto
      &-morning
        color $dark_gray
        text-align center
    &-select
      text-align center
      font-size 16px
      padding 0.7em
      width 100%
      height 53.59px
      margin 0.4em auto
    &-desc
      font-family "Avenir LT Std Heavy"
      font-size 16px
      color $dark_gray
      margin 3em 0 0.8em 0
      text-align left

  &-row-content
    margin-bottom 50px
    margin-top 30px

  &-header
    background-color white
    padding 1.5em
    border-radius 5px
    margin-top 30px
    &-title
      font-family "Avenir LT Std Heavy"
      font-size 20px
      color $dark_gray
      display inline-block
      margin-left -60px
      width 40%
      text-align left
    &-price
      color $purple
      font-size 20px
      display inline-block
      float right
      font-family "Avenir LT Std Medium"

    &-radio-label
      margin-top 10px

    &-radio-label::before
      border solid 3px #B3B3B3
      width 35px
      height 35px
      font-size 30px
      line-height 35px

  &-body
    margin-top 30px
    &-radio-cont
      display block
      margin-left 120px
      text-align center
      font-size 17px
    &-radio-label
      margin 5px 0
    &-radio-label::before
      border solid 2px #B3B3B3
      width 19px
      height 19px
      font-size 18px
      line-height 19px

  &-1-loader
    margin 1em 0
    display none
    div
      padding 0

  &-2-loader
    margin 1em 0
    display none
    div
      padding 0

