.contract-adult
  background-color #f3f3f4
  overflow-x hidden
  overflow-y auto

  &-loader
    display none

  &-form
    margin-top 3em
    &-area
      width 100%
      font-size 18px
      padding 1em
      resize none
      margin-bottom 1em
      color $dark_gray
    &-input
      font-size 19px
      padding 0.7em
      width 100%
      margin 0.4em auto
    &-select
      text-align center
      font-size 16px
      padding 0.7em
      width 100%
      height 53.59px
      margin 0.4em auto
    &-desc
      font-family "Avenir LT Std Heavy"
      font-size 16px
      color $dark_gray
      margin 3em 0 1em 0
      text-align left
