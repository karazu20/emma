.emma-modal
  background-color rgba(0, 0, 0, 0.73)

  &-loader
    display none

  &-close
    font-family 'Avenir LT Std Roman'
    position absolute
    top 20px
    right 20px
    font-size 50px
    line-height 1
    color #fff
  &-content
    background-color transparent
    box-shadow none
    border none
  &-dialog
    width 60%
    margin 0em auto 0 auto
  &-form
    &-title
      color white
      font-size 40px
      font-family "Avenir LT Std Roman"
      text-align center
      margin 1.5em 0 1em 0
    &-input
      border 2px transparent solid
      color $dark_gray
      font-size 18px
      padding 0.7em
      display block
      width 100%
      margin 1em auto
    &-area
      width 100%
      font-size 18px
      padding 1em
      resize none
      margin-bottom 1em
      color $dark_gray

  &-btn
    font-size 21px
    display: block;
    padding 6px 19px
    margin 0.5em auto 6.5em auto
