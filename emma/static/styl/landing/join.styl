.join
  background-color $light_gray
  overflow-y auto
  overflow-x hidden

  &-loader
    display none

  &-btn
    font-size 21px
    display: block;
    margin 4em auto 1em auto
    padding 0.7rem 0.7rem
    width 85%
  &-title
    font-family "Avenir LT Std Medium"
    font-size 29px
    color $dark_gray
  &-desc
    font-family "Avenir LT Std Medium"
    font-size 18px
    color $dark_gray
    text-align left
  &-input
    border 2px transparent solid
    width 100%
    padding 0.6em 25px
    font-family "Avenir LT Std Roman"
    font-size 18px
    margin 0.4em 0
    color $dark_gray
    &-ch
      margin-left 25px !important
    &-label
      font-family "Avenir LT Std Roman"
      font-size 19px
      color #808080
      span
        margin-left 15px
  &-form-text
    font-family "Avenir LT Std Roman"
    font-weight bold
    font-size 19px
    color #333
    padding 15px 0 0 15px
  &-row-title
    margin-top $header_height + 90px
  &-row-desc
    margin-top 40px
    margin-bottom 15px
  &-row-form
    margin-bottom 100px

.other
  font-size 15px
  padding 5px 10px
  margin-left 10px


.radio-check-button
  color transparent
  opacity 0
  position fixed
  left -100vw
  top -100vh

.radio-check-label::before
  background white
  border solid 2px $light_gray
  border-radius 3px
  box-sizing border-box !important
  color green
  content ' '
  display inline-block
  line-height 18px
  margin 1px 10px 0 0
  text-align center
  vertical-align top
  width 18px
  height 18px

.radio-check-button:focus ~ .radio-check-label::before
  box-shadow 0 0 5px #1481D0

.radio-check-button:checked ~ .radio-check-label::before
  border-color green
  content '\2714'
