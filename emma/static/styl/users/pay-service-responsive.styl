/* Móviles en vertical
   ------------------------------------------------------------------------- */
@media screen and (max-width: 768px)

  .pay
    &-card-brand
      display none

    &-btn
      font-size 21px
      padding 6px 21px
      margin 1.5em auto 0 auto

    &-btn-2
      font-size 21px
      padding 6px 21px
      margin 1em auto 6.5em auto
      width auto

/* Móviles en horizontal o tablets en vertical
   ------------------------------------------------------------------------- */
@media (min-width: 768px) and (max-width: 992px)
  .pay
    &-card-brand
      display inline

