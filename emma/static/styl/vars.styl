/* Paleta de colores Emma */
$gray = #808080
$dark_gray = #575656
$purple = #4848AA
$yellow = #F7C42A
$orange = #F7C42A
$white = #F0F0F1
$light_gray = #ECECED
$green = #337F06
$red = #FF0000

$dashboard_background = #f4f4f4
$border_gray = #dedede

center-block()
  margin-left auto
  margin-right auto

remify(pxsize)
  return unit(pxsize / 16, 'rem')

/* Clases Utiles */

.green
  color $green

.red
  color $red

.emma-coordinator-icon
  height 30px
  width 30px
  margin-right 20px
