.circle
  border-radius 50%

.flex
  display flex

.flex-grow-1
  flex-grow 1

.white-background
  background white

.centered-col
  margin 0 auto
  float none

/* Centrar un numero impar de columnas en un row */

.text-center
  text-align center

.row
  &.text-center
    & > div
      display inline-block !important
      float none !important

