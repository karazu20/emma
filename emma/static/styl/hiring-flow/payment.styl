#hiring-flow
  .payment-legend
    display block
    font-size 21px
    margin-top 18px
    
  #contract-pay-form
    margin 0 auto
    width 390px
    
    .form-loader
      width 100%
      
      >div
        padding 0
    
    .form-inner-span
      color $gray
      display inline-block
      font-size 21px
      margin-top 34px
      
      & + .row
        margin-top -8px
    
    .emma-input
      height 60px
  
    .row.multiple-inputs
      text-align center

      input
        display inline-block
        float none
        
        &:not(:first-child)
          margin-left 7px
          
  .payment-button
    font-size 22.5px
    margin 80px 0 30px 0
    padding 9px 75px