.dashboard-navbar
  .header-navbar-logo
    border none
    margin-left 50px
    
  .header-navbar-list
    display inline-block
    margin-right 50px
    text-align right
    
    &-item
      font-size 19px
      font-family "Avenir LT Std Medium"
      font-weight light
      margin 0 15px
    
      &:last-child
        float none
        font-family "Avenir LT Std Heavy"
        padding 0
        width auto
        
        >a
          display inline-block
          vertical-align middle
          
        .navbar-adult-picture
          background-position center
          background-size cover
          cursor pointer
          cursor hand
          display inline-block
          height 50px
          margin-left 14px
          vertical-align middle
          width 50px

#dashboard-container
  background #f4f4f4
  font-family "Avenir LT Std Medium"
  font-size 19px
  margin-top 86px
  padding 25px 50px
  
.dashboard
  position relative

.dashboard-menu,
.dashboard-submenu
  font-family "Avenir LT Std Medium"
  font-size 20px
  list-style none
  
  &-item
    background white
    border-width 1px 0
    border-color $border_gray
    border-style solid
    
    &.active > a
      background $light_gray
      color $gray
      
    a
      color $dark_gray
      display block
      height 100%
      width 100%

      &:hover
        background $light_gray
        color $gray
  
.dashboard-menu
  position absolute
  width 295px
  
  a
    padding 30px 40px

.dashboard-submenu a
  padding 23px 40px

.dashboard-menu .dashboard-menu-item
  &:first-child
    border-width 0 0 1px 0
    
    &.active
      border-width 2px 0 0 0
      
  &:last-child
    border-width 1px 0 0 0
    
.dashboard-submenu .dashboard-submenu-item
  border-width 1px 0 0 0
  
  a
    padding-left 90px
  
.dashboard-content
  margin-left 325px
  min-height 580px
  
.dashboard-suscription-separator
  border-color $gray
  border-width 2px
  margin-top 45px

@media screen and (max-width: 1100px)
  .dashboard-navbar .header-navbar-list
    text-align center
    
    .header-navbar-list-item
      margin 0
  
  #dashboard-container
    margin-top 65px

  .dashboard-navbar 
    label[for="navbar-trigger"]
      display none

    label[for="navbar-trigger"]::before
      cursor pointer
      font-size 30px
      position absolute
      right 15px
      top 20px
      z-index 3

    .header-navbar-list
      display inline-block
      height 100%
      position initial
      text-align right
      top initial

      &-item
        display inline-block !important
        height 100%
        line-height 67px
        margin 0 15px !important
        overflow hidden
        width auto !important

    #navbar-trigger
      &:checked
        & ~ ul
          height auto

          li
            height 50px
            margin-top -1px
        & + label
          color $orange
      &:not(:checked)
        & + label
          color #333

@media screen and (max-width: 1025px)
  .dashboard-navbar .header-navbar-list
    text-align center
    
    .header-navbar-list-item
      margin 0
  
  #dashboard-container
    margin-top 65px

  .dashboard-navbar 
    label[for="navbar-trigger"]
      display inline-block

    label[for="navbar-trigger"]::before
      cursor pointer
      font-size 30px
      position absolute
      right 15px
      top 20px
      z-index 3

    .header-navbar-list
      display block
      height 0
      position absolute
      text-align center
      top 65px

      &-item
        display block !important
        height 0
        line-height 50px
        margin 0 !important
        width 100%

    #navbar-trigger
      &:checked
        & ~ ul
          height auto

          li
            height 50px
            margin-top -1px
        & + label
          color $orange
      &:not(:checked)
        & + label
          color #333


@media screen and (max-width: 992px)
  .dashboard
    display block
    
  .dashboard-menu
    position relative
    width 100%
    
  .dashboard-content
    margin-left 0
    margin-top 50px
    min-height auto
    width 100%